<div style="display: flex; justify-content: end; margin-right: 20px;">
  <button style="margin: 10px;" class="btn-info px-2 py-1">
    <a href="/login">
      <strong style="color: white">Iniciar Sesi√≥n</strong>
    </a>
  </button>
</div>
<div id="containerForm" class="mx-auto" style="width: 25%; margin-top:30px">
  <form method="POST" action="/sessions/register">
    <h3>Registro</h3>
    <div class="form-group">
      <label class="alert-info" style="padding:3px">Nombre</label>
      <input type="text" class="form-control" name="nombre" placeholder="Ingresar nombre" />
    </div>
    <div class="form-group">
      <label class="alert-info" style="padding:3px">Apellido</label>
      <input type="text" class="form-control" name="apellido" placeholder="Ingresar apellido" />
    </div>
    <div class="form-group">
      <label class="alert-info" style="padding:3px">Edad</label>
      <input type="number" class="form-control" name="edad" placeholder="Ingresar edad" />
    </div>
    <div class="form-group">
      <label class="alert-info" style="padding:3px">Usuario</label>
      <input type="text" class="form-control" name="usuario" placeholder="Ingresar usuario" />
    </div>
    <div class="form-group">
      <label class="alert-info" style="padding:3px">Email</label>
      <input type="text" class="form-control" name="email" placeholder="Ingresar email" />
    </div>
    <div class="form-group">
      <label class="alert-info" style="padding:3px">Password</label>
      <input type="password" class="form-control" name="password" placeholder="Ingresar password" />
    </div>
    <div class="form-group" style="display: flex; justify-items: center;">
      <label class="alert-info" style="padding:3px">Admin</label>
      <input style="width: 25px; height:25px; margin-left:60px;" class="form-check-input" type="checkbox" id="isAdmin"
        name="isAdmin">
    </div>

    <div class="mx-auto" style="width: 30%">
      <button type="submit" class="btn-info p-1">Registrar Usuario</button>
    </div>
  </form>
</div>